<body>
    <section>
        {{> nav}}
    </section>
    <style>
        .color {
            background-color: rgba(206, 209, 211, 0.747);
        }
    </style>

    <main class="color">

        <div class="contenedor__todo">
            <div class="caja__trasera">
                <div class="caja__trasera-login">
                    <h3>¿Ya tienes una cuenta?</h3>
                    <p>Inicia sesión para entrar en la página</p>
                    <button id="btn__iniciar-sesion">Iniciar Sesión</button>
                </div>
                <div class="caja__trasera-register">
                    <h3>¿Aún no tienes una cuenta?</h3>
                    <p>Regístrate para que puedas iniciar sesión</p>
                    <button id="btn__registrarse">Regístrarse</button>
                </div>
            </div>


            <div class="contenedor__login-register">

                <form class="was-validated" action="" class="formulario__login">
                    <h2>Iniciar Sesión</h2>
                    <input type="text" placeholder="Correo Electronico"
                        pattern="^(?!@)[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" required>
                    <div class="invalid-feedback">
                        Ingresa un email correcto
                    </div>
                    <div class="group-form">
                        <input class="my-3" type="password" placeholder="Contraseña"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,15}$" required>

                        <div class="invalid-feedback">
                            Debe tener entre 8 y 15 caracteres, una letra mayúscula,un número y un caracter especial.
                        </div>

                    </div>
                    <div class="col-12 mx-auto  ">
                        <a type="submit" class="btn btn-primary col-12 " href="analytic">Entrar</a>
                    </div>
                    <br>
                    <div class="col-12 mx-auto  ">
                        <a type="submit" class="btn btn-success col-12" onclick="argon.showSwal('warning-message-and-confirmation')" href="">Recuperar contraseña</a>
                    </div>

                </form>


                <form action="" class="formulario__register">
                    <h2>Regístrarse</h2>
                    <input type="text" placeholder="Nombre completo"
                        pattern="^[a-zA-Z.!#$%&'*+\/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$"
                        required>
                        <div class="invalid-feedback">
                        Ingresa un nombre válido
                    </div>
                    <input type="text" placeholder="Correo Electronico" required
                    pattern="^(?!@)[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$">
                    <div class="invalid-feedback">
                        Ingresa un email correcto
                    </div>
                    <input type="text" placeholder="Usuario" required pattern="^[a-zA-Z0-9.!#$%&'*+\/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$">
                    <div class="invalid-feedback" >
                        Ingresa un email correcto
                    </div>
                    <input type="password" placeholder="Contraseña" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*#?&])[A-Za-z\d@$!%*#?&]{8,15}$">
                    <div class="invalid-feedback">
                        Ingresa un email correcto
                    </div>
                    <button>Regístrarse</button>
                </form>
            </div>
        </div>

    </main>
